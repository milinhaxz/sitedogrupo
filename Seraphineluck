    <script>
        // Função simular compra
        function comprar(produto) {
            document.getElementById('produto').value = produto;
            window.scrollTo({ top: document.getElementById('pagamento').offsetTop - 60, behavior: 'smooth' });
        }

        // Função simular feedback
        function addFeedback(e) {
            e.preventDefault();
            var nome = document.getElementById('nomeFeedback').value;
            var texto = document.getElementById('textoFeedback').value;
            var lista = document.getElementById('feedback-list');
            var novo = document.createElement('div');
            novo.className = 'feedback-item';
            novo.innerHTML = '<b>' + nome + '</b> <br>' + texto;
            lista.appendChild(novo);
            document.getElementById('feedback-form').reset();
        }

        // Função simular pagamento
        function pagamento(e) {
            e.preventDefault();
            document.getElementById('pagamento-sucesso').innerText = "Pagamento aprovado! Obrigado pela compra.";
            setTimeout(() => {
                document.getElementById('pagamento-sucesso').innerText = "";
                document.getElementById('pagamento').querySelector('form').reset();
            }, 5000);
        }

        // Bot de ajuda
        function botAjuda() {
            var pref = document.getElementById('preferencia').value;
            var resposta = "";
            if(pref == "amadeirada") {
                resposta = "Sugerimos o Seraphine Luck Nature: amadeirado, elegante e sofisticado.";
            } else if(pref == "floral") {
                resposta = "Sugerimos o Seraphine Luck Rosé: floral, delicado e clássico.";
            } else {
                resposta = "Sugerimos o Seraphine Luck Black: intenso e marcante, perfeito para noites especiais.";
            }
            document.getElementById('bot-response').innerText = resposta;
        }
    </script>
